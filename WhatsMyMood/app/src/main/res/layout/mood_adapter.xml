<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10sp"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/edit_mood"
        android:clickable="true"
        android:layout_width="match_parent"
        android:paddingLeft="10sp"
        android:layout_height="wrap_content"
        android:paddingBottom="5sp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="@string/mood_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/author"
                android:textSize="30sp"/>
            <TextView
                android:text="@string/mood_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mood"
                android:textSize="20sp"/>
            <TextView
                android:text="@string/blank_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/moodMessage"
                android:textSize="20sp"/>
            <TextView
                android:text="@string/blank_social_sit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/moodSocialSituation"
                android:textSize="20sp"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/locationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/mood_functions"
            android:src="@drawable/ic_location_marker"
            android:background="#00000000"
            android:layout_marginRight="15sp"/>
        <ImageButton
            android:id="@+id/mood_functions"
            android:src="@drawable/spinner_arrow"
            android:background="#00000000"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/moodEmoticon"
            android:layout_toStartOf="@+id/moodEmoticon" />
        <TextView
            android:text="@string/mood_date"
            android:layout_width="wrap_content"
            android:paddingTop="15sp"
            android:paddingRight="10sp"
            android:layout_height="wrap_content"
            android:id="@+id/moodDate"
            android:textSize="10sp"
            android:layout_below="@+id/mood_functions"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ImageView
            android:layout_width="wrap_content"
            android:paddingRight="10sp"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/moodDate"
            android:id="@+id/moodEmoticon"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/moodImage"/>
</LinearLayout>